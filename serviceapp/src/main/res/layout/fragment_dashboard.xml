<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment" >

    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Camera -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/cameraIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_circle_red_16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Mic -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/micIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_circle_red_16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mic"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Accelerometer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/accelIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_circle_red_16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accelerometer"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Gyroscope -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/gyroIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_circle_red_16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gyrometer"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Magnetometer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/magnetIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_circle_red_16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magnetometer"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/statusBar">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/audioChart"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/sensorChartAccel"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/sensorChartGyro"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/sensorChartMag"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>