<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnFaceEnroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enroll Face"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnFaceVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Face"
            app:layout_constraintBottom_toTopOf="@+id/btnVoiceEnroll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFaceEnroll" />

        <Button
            android:id="@+id/btnAudioEnroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enroll Voice"
            app:layout_constraintBottom_toTopOf="@+id/btnAudioVerify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnAudioVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Voice"
            app:layout_constraintBottom_toTopOf="@+id/btnGaitEnroll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnGaitEnroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enroll Gait"
            app:layout_constraintBottom_toTopOf="@+id/btnGaitVerify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnGaitVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Gait"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>